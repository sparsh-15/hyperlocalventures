rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to create/read contact form submissions
    match /contactSubmissions/{docId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false;
    }
    match /visits/{docId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if false;
    }
  }
}
